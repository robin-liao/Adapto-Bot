    "azure-storage": "^2.10.3",
    "body-parser": "^1.19.0",
    "botbuilder": "^4.19.3",
    "botframework-config": "^4.11.1",
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "dotenv": "^6.2.0",
    "express": "^5.0.0-alpha.8",
    "fast-xml-parser": "^4.1.3",
    "lodash": "^4.17.19",
    "markdown-it": "^13.0.1",
    "markdown-it-collapsible": "^1.0.0",
    "nodemon": "^1.18.9",
    "openai": "^3.1.0",
